<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.controllers.SettingsController">
    <VBox styleClass="SettingsPane">
        <BorderPane styleClass="settingsTopPane">
            <left>
                <ImageView fx:id="closeImage">
                    <fitWidth>50</fitWidth>
                    <preserveRatio>true</preserveRatio>
                </ImageView>
            </left>

            <center>
                <HBox alignment="center" spacing="10">
                    <Label fx:id="SettingsLeft" styleClass="SettingsArrow" text="&lt;"/>
                    <Label fx:id="SettingsTitle"  styleClass="SettingsTitle" text="Audio / Visuals"/>
                    <Label fx:id="SettingsRight" styleClass="SettingsArrow" text="&gt;"/>
                </HBox>
            </center>
        </BorderPane>

        <StackPane>
            <VBox fx:id="MusicNVisual">
                <Pane styleClass="Line"/>
                <VBox styleClass="volumeControl" spacing="10" alignment="CENTER">
                    <Label text="Music" styleClass="ShortcutLabel"/>
                    <Slider styleClass="MusicSlider"  fx:id="MusicSlider" value="50"/>
                </VBox>
                <VBox styleClass="volumeControl" spacing="10" alignment="CENTER">
                    <Label text="Buttons SFX" styleClass="ShortcutLabel"/>
                    <Slider styleClass="MusicSlider"  fx:id="ButtonsSlider" value="50"/>
                </VBox>
                <VBox styleClass="volumeControl" spacing="10" alignment="CENTER">
                    <Label text="Clear Lines SFX" styleClass="ShortcutLabel"/>
                    <Slider styleClass="MusicSlider"  fx:id="ClearLinesSlider" value="50"/>
                </VBox>
                <Pane styleClass="Line"/>
                <HBox styleClass="PanelToggle">
                    <VBox fx:id="HoldPiece" styleClass="TogglePanel">
                        <Label text="Hold" styleClass="ShortcutLabel"/>
                        <HBox styleClass="ToggleButtonsPanel">
                            <Label fx:id="ToggleHoldOn" styleClass="Toggle" text="O"/>
                            <Label fx:id="ToggleHoldOff" styleClass="Toggle" text="|"/>
                        </HBox>
                    </VBox>

                    <VBox styleClass="TogglePanel">
                        <Label text="Next Piece" styleClass="ShortcutLabel"/>
                        <HBox styleClass="ToggleButtonsPanel">
                            <Label fx:id="ToggleNextOn" styleClass="Toggle" text="O"/>
                            <Label fx:id="ToggleNextOff" styleClass="Toggle" text="|"/>
                        </HBox>
                    </VBox>
                </HBox>

                <HBox styleClass="PanelToggle">
                    <VBox styleClass="TogglePanel">
                        <Label text="Ghost Piece" styleClass="ShortcutLabel"/>
                        <HBox styleClass="ToggleButtonsPanel">
                            <Label fx:id="ToggleGhostOn" styleClass="Toggle" text="O"/>
                            <Label fx:id="ToggleGhostOff" styleClass="Toggle" text="|"/>
                        </HBox>
                    </VBox>
                    <VBox styleClass="TogglePanel">
                        <Label text="Display Controls" styleClass="ShortcutLabel"/>
                        <HBox styleClass="ToggleButtonsPanel">
                            <Label fx:id="ToggleControlOn" styleClass="Toggle" text="O"/>
                            <Label fx:id="ToggleControlOff" styleClass="Toggle" text="|"/>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox fx:id="ControlSetting">
            <Label styleClass="Instruction" text="Click a box and press a key to change its shortcut."/>
            <Pane styleClass="Line"/>

            <HBox>
                <VBox styleClass="shortcutPanel">
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Move Left"/>
                        <Label styleClass="ShortcutKey" fx:id="Left"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Move Right"/>
                        <Label styleClass="ShortcutKey" fx:id="Right"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Move Down"/>
                        <Label styleClass="ShortcutKey" fx:id="Down"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Rotate"/>
                        <Label styleClass="ShortcutKey" fx:id="Rotate"/>
                    </VBox>
                </VBox>

                <VBox styleClass="shortcutPanel">
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Hard Drop"/>
                        <Label styleClass="ShortcutKey" fx:id="Harddrop"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Pause"/>
                        <Label styleClass="ShortcutKey" fx:id="Pause"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Hold"/>
                        <Label styleClass="ShortcutKey" fx:id="Hold"/>
                    </VBox>
                    <VBox styleClass="ShortcutBox">
                        <Label styleClass="ShortcutLabel" text="Restart"/>
                        <Label styleClass="ShortcutKey" fx:id="Restart"/>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
        </StackPane>

    </VBox>


    <stylesheets>
        <URL value="@settingsLayout.css"/>
    </stylesheets>
</StackPane>
